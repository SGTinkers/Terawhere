<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="cardViewTextHeader" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/colorCardViewText</item>
    </style>

    <style name="cardViewTextTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="cardViewTextSubtitleRed" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/colorCardViewTextRed</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="card_view_field_label" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/color_hard_black</item>
    </style>

    <style name="card_view_field_value" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/color_soft_black</item>
    </style>

</resources>
