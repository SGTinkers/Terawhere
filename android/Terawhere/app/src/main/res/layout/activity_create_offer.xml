<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/createOfferRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".screens.activities.CreateOfferActivity">

        <include
            android:id="@+id/includeToolbar"
            layout="@layout/toolbar" />


        <Button
            android:id="@+id/button_start_location"
            android:layout_below="@id/includeToolbar"

            android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"


            android:background="@drawable/ripple_effect"
            android:fontFamily="sans-serif"
                android:gravity="center"
                android:lines="3"
                android:text="Where are you now?"
            android:textColor="#434343"
            android:textSize="15sp"
            android:textStyle="italic" />


        <Button
            android:id="@+id/button_end_location"
            android:layout_width="match_parent"
            android:layout_below="@id/button_start_location"

            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"

                android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect"
            android:fontFamily="sans-serif"
                android:gravity="center"
                android:lines="3"
                android:text="Where do you want to go?"
            android:textColor="#434343"
            android:textSize="15sp"

            android:textStyle="italic" />


        <EditText
            android:id="@+id/meetUpTimeEditText"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/button_end_location"
            android:layout_centerInParent="true"
            android:background="@drawable/ripple_effect_edit_text"
            android:layout_marginTop="20dp"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:hint="Meet Up Time"
            android:imeOptions="actionNext"
            android:focusable="false" />


        <EditText
            android:id="@+id/seatsAvailableEditText"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/meetUpTimeEditText"
            android:layout_centerInParent="true"
            android:background="@drawable/ripple_effect_edit_text"
            android:layout_marginTop="20dp"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:ems="10"
            android:hint="Number of seats available"
            android:imeOptions="actionNext"

            android:inputType="number"
            android:maxLength="1" />


        <AutoCompleteTextView
            android:id="@+id/vehicleDescriptionEditText"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/seatsAvailableEditText"
            android:layout_centerInParent="true"
            android:background="@drawable/ripple_effect_edit_text"

            android:layout_marginLeft="30dp"

            android:layout_marginRight="30dp"
            android:layout_marginTop="70dp"
            android:ems="10"
            android:hint="Vehicle color"
            android:imeOptions="actionNext"
            android:inputType="text" />


        <EditText
            android:id="@+id/vehicleModelEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect_edit_text"

            android:layout_below="@id/vehicleDescriptionEditText"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Vehicle Model"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/vehiclePlateNumberEditText"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/vehicleModelEditText"
            android:layout_centerInParent="true"
            android:background="@drawable/ripple_effect_edit_text"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Vehicle number"
            android:imeOptions="actionNext"

            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/remarksEditText"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/vehiclePlateNumberEditText"
            android:layout_centerInParent="true"
            android:background="@drawable/ripple_effect_edit_text"

            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="70dp"
            android:ems="10"
            android:hint="Enter your remarks here"
            android:imeOptions="actionNext"

            android:inputType="textPersonName" />


        <Button
            android:id="@+id/createOfferButton"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@id/remarksEditText"
            android:layout_centerInParent="true"
            android:background="@color/color_terawhere_primary"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="70dp"
            android:textColor="@color/white"
            android:text="Create offer" />


    </RelativeLayout>
</ScrollView>
