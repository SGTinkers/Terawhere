<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createOfferRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateOfferActivity">

    <include
        android:id="@+id/includeToolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:id="@+id/createOfferLinearLayout2"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@id/includeToolbar"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/locationLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageCurrentLocation"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"

                android:src="@drawable/current_location" />


            <TextView
                android:id="@+id/locationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:inputType="textMultiLine"
                android:lines="3"
                android:text="Where are you now?"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#191970"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/locationLinearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/includeToolbar"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageDestination"
                android:layout_width="20dp"
                android:layout_height="20dp"
            android:layout_gravity="center"
                android:layout_margin="5dp"

                android:src="@drawable/destination" />


            <AutoCompleteTextView
                android:id="@+id/destinationEditText"
                android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
                android:ems="10"
                android:hint="Which mosque do you want to go?"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:layout_weight="4.13">

            </AutoCompleteTextView>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/createOfferScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/createOfferLinearLayout2"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/createOfferLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"

            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TimePicker
                android:id="@+id/pickUpTimePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_radius_corner"
                android:timePickerMode="spinner" />

            <requestFocus />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"

                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/seat" />

                <EditText
                    android:id="@+id/seatsAvailableEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:ems="10"
                    android:hint="Number of seats available"
                    android:inputType="number"
                    android:maxLength="1" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/color" />

                <AutoCompleteTextView
                    android:id="@+id/vehicleColorEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:ems="10"
                    android:hint="Vehicle color"
                    android:imeOptions="actionNext"
                    android:inputType="text">

                </AutoCompleteTextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/car" />

                <EditText
                    android:id="@+id/vehiclePlateNumberEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Vehicle number"
                    android:inputType="textPersonName" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/remarks" />

                <EditText
                    android:id="@+id/remarksEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ems="10"
                    android:hint="Enter your remarks here"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <Button
                android:id="@+id/createOfferButton"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="50dp"
                android:text="Create offer" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>