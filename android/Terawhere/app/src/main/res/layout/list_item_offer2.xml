<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    card_view:cardCornerRadius="4dp"
                                    card_view:cardUseCompatPadding="true"
                                    card_view:contentPaddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/text_view_offer_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="-28sp"
            android:text="26"
            android:textColor="#000000"
            android:textSize="48sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/text_view_offer_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_offer_day"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif"
            android:text="May"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="normal"/>

        <View
            android:id="@+id/view_vertical_line"
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_toEndOf="@id/text_view_offer_day"
            android:background="#FF000000"/>

        <TextView
            android:id="@+id/text_view_offer_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/view_vertical_line"
            android:fontFamily="sans-serif"
            android:text="Destination:"
            android:textColor="#7e7b7b"
            android:textSize="13sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/text_view_offer_meeting_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_offer_destination"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/view_vertical_line"
            android:fontFamily="sans-serif"
            android:text="Meeting Point:"
            android:textColor="#7e7b7b"
            android:textSize="13sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/text_view_offer_pickup_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_offer_meeting_point"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/view_vertical_line"
            android:fontFamily="sans-serif"
            android:text="Pick Up Time:"
            android:textColor="#7e7b7b"
            android:textSize="13sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/text_view_offer_seats_offered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_offer_pickup_time"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/view_vertical_line"
            android:fontFamily="sans-serif"
            android:text="Seats Offered:"
            android:textColor="#7e7b7b"
            android:textSize="13sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/text_view_offer_seats_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_offer_seats_offered"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/view_vertical_line"
            android:fontFamily="sans-serif"
            android:text="Seats Left:"
            android:textColor="#7e7b7b"
            android:textSize="13sp"
            android:textStyle="normal"/>

        <TextView
            android:id="@+id/text_view_offer_remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_offer_seats_left"
            android:layout_margin="5dp"
            android:layout_toEndOf="@id/view_vertical_line"
            android:fontFamily="sans-serif"
            android:text="Remarks:"
            android:textColor="#7e7b7b"
            android:textSize="13sp"
            android:textStyle="normal"
            android:visibility="gone"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>