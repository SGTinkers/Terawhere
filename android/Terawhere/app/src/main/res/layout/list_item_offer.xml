<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPaddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_offer_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:ellipsize="marquee"
            android:text="offer time"
            android:textAppearance="@style/card_view_field_value"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_view_offer_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_offer_time"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:ellipsize="marquee"
            android:text="offer date"
            android:textAppearance="@style/card_view_field_value"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_view_offer_pickup_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_offer_date"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:ellipsize="marquee"
            android:text="offer pickup location"
            android:textAppearance="@style/card_view_field_value"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_view_offer_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_offer_pickup_location"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:ellipsize="marquee"
            android:text="offer destination"
            android:textAppearance="@style/card_view_field_value"
            android:textStyle="bold"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>