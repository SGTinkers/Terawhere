<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_radius_corner"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/seat" />

            <TextView
                android:id="@+id/dialogSeatsAvailable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize = "30dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/textview_vertical_margin"
                android:ellipsize="marquee"
                android:fontFamily="casual"
                android:textAppearance="@style/cardViewTextHeader" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/dialogTimestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize = "30dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/textview_vertical_margin"
                android:ellipsize="marquee"
                android:fontFamily="casual"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textAppearance="@style/cardViewTextTitle" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:src="@drawable/destination" />

            <TextView
                android:id="@+id/dialogDestination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/textview_vertical_margin"
                android:ellipsize="marquee"
                android:fontFamily="casual"
                android:maxLines="1"
                android:textSize = "30dp"
                android:textStyle="italic"

                android:textColor="@color/colorCardViewTextRed"
                android:textAppearance="@style/cardViewTextTitle" />


        </LinearLayout>





            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/remarks" />

                <TextView
                    android:id="@+id/dialogRemarks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/textview_vertical_margin"
                    android:ellipsize="marquee"
                    android:fontFamily="casual"
                    android:maxLines="1"
                    android:text="placeholder medical record date"
                    android:textAppearance="@style/cardViewTextTitle" />
            </LinearLayout>




    </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Choose number of seats:"
        android:textStyle = "bold"
        android:textColor="#000000"
        android:layout_margin="10dp"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        />
</LinearLayout>