<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
      android:id="@+id/relative_layout_item"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="16dp">

        <View
          android:id="@+id/view_vertical_line"
          android:layout_width="1dp"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_toEndOf="@+id/text_view_day"
          android:layout_alignTop="@+id/text_view_end_location_name_label"
          android:layout_alignBottom="@+id/text_view_driver"
          android:background="#979797" />

        <TextView
          android:id="@+id/text_view_day"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginLeft="8dp"
          android:layout_marginRight="8dp"
          android:fontFamily="sans-serif"
          android:gravity="center_horizontal"
          android:text="26"
          android:textColor="#000000"
          android:textSize="48sp"
          android:textStyle="normal" />

        <TextView
          android:id="@+id/text_view_month"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="-8dp"
          android:layout_alignParentStart="true"
          android:layout_below="@+id/text_view_day"
          android:layout_gravity="center"
          android:layout_toStartOf="@+id/view_vertical_line"
          android:fontFamily="sans-serif"
          android:gravity="center"
          android:text="May"
          android:textColor="#7e7b7b"
          android:textSize="15sp"
          android:textStyle="normal" />

        <TextView
          android:id="@+id/text_view_meetup_time"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/text_view_month"
          android:layout_gravity="center"
          android:layout_marginTop="4dp"
          android:layout_alignParentStart="true"
          android:layout_toStartOf="@+id/view_vertical_line"
          android:fontFamily="sans-serif"
          android:gravity="center"
          android:text="07:00pm"
          android:textColor="#000000"
          android:textSize="13sp"
          android:textStyle="normal" />

        <TextView
          android:id="@+id/text_view_end_location_name_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toEndOf="@id/view_vertical_line"
          android:fontFamily="sans-serif"
          android:text="Destination"
          android:textColor="#7e7b7b"
          android:textSize="10sp"
          android:textStyle="normal" />

        <TextView
          android:id="@+id/text_view_end_location_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/text_view_end_location_name_label"
          android:layout_toEndOf="@id/view_vertical_line"
          android:fontFamily="sans-serif"
          android:text="An-Nur Mosque"
          android:textColor="#000000"
          android:textSize="13sp"
          android:textStyle="normal" />

        <TextView
          android:id="@+id/text_view_end_location_address"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/text_view_end_location_name"
          android:layout_toEndOf="@id/view_vertical_line"
          android:drawablePadding="4dp"
          android:gravity="center_vertical"
          android:fontFamily="sans-serif"
          android:text="6 Admiralty Rd, Singapore 739983"
          android:textColor="#888888"
          android:textSize="13sp"
          android:textStyle="italic"
          android:visibility="visible"
          tools:visibility="visible"/>

        <TextView
          android:id="@+id/text_view_start_location_name_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/text_view_end_location_address"
          android:layout_toEndOf="@id/view_vertical_line"
          android:layout_marginTop="4dp"
          android:fontFamily="sans-serif"
          android:text="Meetup Place"
          android:textColor="#7e7b7b"
          android:textSize="10sp"
          android:textStyle="normal" />

        <TextView
          android:id="@+id/text_view_start_location_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/text_view_start_location_name_label"
          android:layout_toEndOf="@id/view_vertical_line"
          android:fontFamily="sans-serif"
          android:text="Blk 406 Bus Stop"
          android:textColor="#000000"
          android:textSize="13sp"
          android:textStyle="normal" />

        <TextView
          android:id="@+id/text_view_start_location_address"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/text_view_start_location_name"
          android:layout_toEndOf="@id/view_vertical_line"
          android:drawablePadding="4dp"
          android:gravity="center_vertical"
          android:fontFamily="sans-serif"
          android:text="406 Woodlands Street 41"
          android:textColor="#888888"
          android:textSize="13sp"
          android:textStyle="italic"
          android:visibility="visible"
          tools:visibility="visible"/>

        <TextView
          android:id="@+id/text_view_seats_left_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/text_view_start_location_address"
          android:layout_marginTop="4dp"
          android:layout_toEndOf="@id/view_vertical_line"
          android:fontFamily="sans-serif"
          android:text="Seats Left"
          android:textColor="#7e7b7b"
          android:textSize="10sp"
          android:textStyle="normal"
          android:visibility="visible"
          tools:visibility="visible"/>

        <TextView
          android:id="@+id/text_view_seats_left"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/text_view_seats_left_label"
          android:layout_toEndOf="@id/view_vertical_line"
          android:fontFamily="sans-serif"
          android:text="2"
          android:textColor="#000000"
          android:textSize="13sp"
          android:textStyle="normal"
          android:visibility="visible"
          tools:visibility="visible"/>

        <TextView
          android:id="@+id/text_view_remarks_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/text_view_seats_left"
          android:layout_toEndOf="@id/view_vertical_line"
          android:layout_marginTop="4dp"
          android:fontFamily="sans-serif"
          android:text="Remarks"
          android:textColor="#7e7b7b"
          android:textSize="10sp"
          android:textStyle="normal"
          android:visibility="visible"
          tools:visibility="visible"/>

        <TextView
          android:id="@+id/text_view_remarks"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/text_view_remarks_label"
          android:layout_toEndOf="@id/view_vertical_line"
          android:fontFamily="sans-serif"
          android:text="Remarks here"
          android:textColor="#000000"
          android:textSize="13sp"
          android:textStyle="normal"
          android:visibility="visible"
          tools:visibility="visible"/>

        <TextView
          android:id="@+id/text_view_driver_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/text_view_remarks"
          android:layout_toEndOf="@id/view_vertical_line"
          android:layout_marginTop="8dp"
          android:fontFamily="sans-serif"
          android:text="Driver"
          android:textColor="#7e7b7b"
          android:textSize="10sp"
          android:textStyle="normal"
          android:visibility="visible"
          tools:visibility="visible"/>

        <ImageView
          android:id="@+id/image_view_driver_avatar"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_below="@id/text_view_driver_label"
          android:layout_toEndOf="@id/view_vertical_line"
          android:fontFamily="sans-serif"
          tools:src="@drawable/hafidz2"
          android:visibility="visible"
          tools:visibility="visible"/>

        <TextView
          android:id="@+id/text_view_driver"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@id/text_view_driver_label"
          android:layout_toEndOf="@id/image_view_driver_avatar"
          android:layout_alignTop="@+id/image_view_driver_avatar"
          android:layout_alignBottom="@+id/image_view_driver_avatar"
          android:layout_marginLeft="6dp"
          android:gravity="center_vertical"
          android:fontFamily="sans-serif"
          android:text="Khairul Akmal"
          android:textColor="#000000"
          android:textSize="13sp"
          android:textStyle="normal"
          android:visibility="visible"
          tools:visibility="visible"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="13sp"
            android:text="Number of Seats:"
            android:textColor="#7e7b7b"
            android:textSize="13sp"
            android:textStyle="normal" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="0sp"
            android:text="1"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>