<?xml version="1.0" encoding="UTF-8"?>


<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/color_terawhere_primary">
    <item android:id="@android:id/mask">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/color_terawhere_primary" />
            <stroke
                android:width="3dip"
                android:color="@color/color_terawhere_primary" />
            <corners android:radius="10dip" />
            <padding
                android:left="0dip"
                android:top="0dip"
                android:right="0dip"
                android:bottom="0dip" />
        </shape>
    </item>

    <item
        android:top="-6dp"
        android:left="-6dp"
        android:right="-6dp">
        <shape>
            <stroke
                android:color="@color/color_terawhere_primary"
                android:width="2dp" />
        </shape>
    </item>
</ripple>